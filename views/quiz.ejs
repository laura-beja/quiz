<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Traffic Sign Quiz</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav>
        <h1 id="quiz-title" role="button">Traffic Sign Quiz</h1>
        <a href="/profile" class="nav-right">
            <img src="/images/profile-icon.png" alt="Profile">
        </a>
    </nav>

    <!-- QUIZ -->
    <section class="quiz-container">
        <div class="timer">
            Time Left: <span id="timer">180</span> seconds
        </div>
        <button id="start-btn" type="button">Start Quiz!</button>
        <form id="quiz-form">
        </form>
        <button id="submit-btn" type="button">Submit Quiz</button>
        <section id="result" class="result"></section>
        <button id="retry-btn" type="button" style="display:none;">Retry Quiz</button>
    </section>

    <!-- external scripts -->
    <script type="module" src="/js/quiz.js"></script>
    <script type="module" src="/js/global-nav.js"></script>
</body>
</html>
